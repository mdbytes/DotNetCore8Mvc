@model List<Category>

@{
    ViewData["Title"] = "Category";
}

<div class="text-center">
    <h1 class="display-4">Category Page</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
  <h2>Categories</h2>

        </div>

        <div class="col-md-6">
            <div class="text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;Create New</a>
            </div>
            
            
        </div>

    </div>
  

    <table class="table table-bordered table-striped">
        <tr>
            <th>Id</th>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>

        @foreach (Category c in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.DisplayOrder</td>
            </tr>
        }

    </table>
</div>